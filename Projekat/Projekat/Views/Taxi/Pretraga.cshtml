
@{
    Layout = null;
}

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body style="background-image:url(https://static.superiorwallpapers.com/images/lthumbs/2015-05/7926_Yellow-taxi-from-New-York-City.jpg); background-repeat: no-repeat; background-size: cover">

    <form method="post" action="/Taxi/PretragaParametri">
        <table border="1" style="background-color:transparent" class="w3-text-white w3-large">

            <tr>
                <td>
                    Pretraga po oceni
                </td>
                <td>
                    <input type="number" max="5" value="0" name="ocena1" />
                </td>
                <td>
                    <input type="number" max="5" value="0" name="ocena2" />
                </td>
            </tr>
            <tr>
                <td>
                    Pretraga po ceni
                </td>
                <td>
                    <input type="number" min="0" value="0" name="cena1" />
                </td>
                <td>
                    <input type="number" min="0" value="0" name="cena2" />
                </td>
            </tr>
            <tr>
                <td>
                    Pretraga po datumu
                </td>
                <td>
                    <input type="date" name="datum1" />
                </td>
                <td>
                    <input type="date" name="datum2" />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Pretrazi" style="background-color:transparent; border:none" class="w3-text-white w3-hover-purple"/>
                </td>
            </tr>
        </table>
    </form>
</body>