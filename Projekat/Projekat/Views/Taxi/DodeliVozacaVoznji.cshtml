@using Projekat.Models
@{
    Layout = null;
}

<h2>DodeliVozacaVoznji</h2>
<form action="/Taxi/DodelaVozacaVoznji" method="post">
    <table border="0">
        <tr>
            <td>
                <select name="vozac">
                    @foreach (KeyValuePair<string, Vozac> kv in ViewBag.vozaci)
                    {
                        if (!kv.Value.Zauzet && (kv.Value.automobil.TipAutomobila == ViewBag.auto || ViewBag.auto == TIPAUTOMOBILA.NEOZNACEN))
                        {
                            <option value="@kv.Key">@kv.Key</option>
                        }
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <input type="hidden" value="@ViewBag.voznja" name="date" />
                <input type="submit" value="Dodeli" />
            </td>
        </tr>
    </table>
</form>
